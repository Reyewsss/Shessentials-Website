@{
    ViewData["Title"] = "About";
}

<link rel="stylesheet" href="~/css/homepage/about-page.css" asp-append-version="true" />

<section class="about-story-header">
    <div class="container text-center">
        <h1 class="about-page-title">Our Story</h1>
        <p class="about-page-subtitle">Elevating your everyday essentials with luxury and care</p>
        <nav class="shop-breadcrumb-nav">
                <a href="@Url.Action("Index", "Home")">Home</a>
                <span class="shop-breadcrumb-separator">/</span>
                <span class="shop-breadcrumb-current">About</span>
            </nav>
    </div>
</section>

<!-- Section 1: The Beginning -->
<section class="about-story-section about-section-beginning">
    <div class="container about-section-flex">
        <div class="about-story-img">
        <picture>
            <img src="~/images/section-banner/small-store.png" alt="Founder Vision" class="about-img" />
        </picture>
        </div>
        <div class="about-story-text">
            <h2 class="about-section-title">A Vision is Born</h2>
            <p>
                Shessentials began as a dream to redefine beauty for the modern woman. Our founder, inspired by the elegance and strength of women everywhere, set out to create a brand that celebrates individuality and empowers confidence.
            </p>
        </div>
    </div>
</section>

<!-- Section 2: The Journey -->
<section class="about-story-section about-section-journey">
    <div class="container about-section-flex">
        <div class="about-story-text text-end">
            <h2 class="about-section-title">Crafting Essentials</h2>
            <p>
            From the first serum to our latest collections, every product is crafted with care, premium ingredients, and a commitment to cruelty-free beauty. Our journey is marked by innovation, quality, and a passion for helping women feel their best every day.
            </p>
        </div>
        <div class="about-story-img about-story-icon">
            <picture>
            <img src="~/images/section-banner/about-product.png" alt="Founder Vision" class="about-img" />
        </picture>
        </div>
    </div>
</section>

<!-- Section 3: The Community -->
<section class="about-story-section about-section-community">
    <div class="container about-section-flex">
        <div class="about-story-img about-story-icon">
            <picture>
            <img src="~/images/section-banner/about-model.png" alt="Founder Vision" class="about-img" />
        </picture>
        </div>
        <div class="about-story-text">
            <h2 class="about-section-title">Empowering Women</h2>
            <p>
                Today, Shessentials is more than a brandâ€”it's a community. We celebrate the stories, achievements, and beauty of women everywhere. Join us as we continue to elevate everyday essentials and inspire confidence in every woman we reach.
            </p>
        </div>
    </div>
</section>


<!-- Store Address Section -->
<section class="about-store-section about-section-store-address">
    <div class="container about-section-flex justify-content-center align-items-center">
        <div class="about-store-img">
            <picture>
                <img src="~/images/section-banner/store-banner.png" alt="Store Banner" class="about-img" />
            </picture>
        </div>
        <div class="about-store-text">
            <h2 class="about-section-title">Visit Our Store</h2>
            <p class="about-store-address">
                123 Shessentials Avenue,<br />
                Beauty District,<br />
                Metro City, 10001
            </p>
        </div>
    </div>
</section>

<!-- FAQs Section -->
<section class="about-faq-section">
    <div class="about-faq-container text-center">
        <h2 class="about-faq-title">Frequently Asked Questions</h2>
        <div class="about-faq-list">
            <div class="about-faq-card">
                <strong class="about-faq-question">Are Shessentials products cruelty-free?</strong>
                <p class="about-faq-answer">Yes, all our products are cruelty-free and made with ethically sourced ingredients.</p>
            </div>
            <div class="about-faq-card">
                <strong class="about-faq-question">Where can I buy Shessentials products?</strong>
                <p class="about-faq-answer">You can shop directly on our website in the Shop section, or at select retail partners.</p>
            </div>
            <div class="about-faq-card">
                <strong class="about-faq-question">How do I contact customer support?</strong>
                <p class="about-faq-answer">Reach out via our Contact page or email us at support@shessentials.com.</p>
            </div>
            <div class="about-faq-card">
                <strong class="about-faq-question">Do you offer international shipping?</strong>
                <p class="about-faq-answer">Yes, we ship internationally. Shipping rates and times vary by location.</p>
            </div>
        </div>
    </div>
</section>
