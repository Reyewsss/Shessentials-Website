<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shessentials</title>
    <link rel="icon" type="image/png" href="~/images/shessentials-logo/shessentials-ico-logo.png" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />

    <!-- IMPORTANT CSS -->
    <link rel="stylesheet" href="~/css/important.css" asp-append-version="true" />

    <!-- HEADER-FOOTER CSS -->
    <link rel="stylesheet" href="~/css/header-footer/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header-footer/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header-footer/cart-counter.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart-notification.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header-footer/login-register.css" asp-append-version="true" />

    <!-- SHOP CSS -->
    <link rel="stylesheet" href="~/css/shop-page/shop.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shop-page/promo-page.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shop-page/cart-notification.css" asp-append-version="true" />

    <!-- RESPONSIVE CSS -->
    <link rel="stylesheet" href="~/css/responsive-dimension/header-footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive-dimension/homepage.css" asp-append-version="true" />

</head>
<body>
    <header>
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNavbar">
            <div class="container-fluid position-relative">

                <!-- Left Side: Navigation (Desktop Only) -->
                <div class="desktop-nav navbar-nav-left d-none d-lg-flex align-items-center">
                    <ul class="navbar-nav d-flex flex-row">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                </div>

                <!-- Desktop Centered Logo (Hidden on Mobile) -->
                <div class="desktop-brand navbar-brand-center-absolute d-none d-lg-block">
                    <a class="navbar-brand d-flex align-items-center text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/shessentials-logo/shessentials-logo.png" alt="Shessentials Logo" class="brand-logo" />
                    </a>
                </div>

                <!-- Right Side: Desktop Actions -->
                <div class="desktop-actions navbar-actions-right d-none d-lg-flex align-items-center ms-auto">
                    <a href="#" class="btn btn-get-started" data-bs-toggle="modal" data-bs-target="#authModal">Get Started</a>
                    <div class="cart-icon-container">
                        <a href="#" class="cart-icon-link" title="Shopping Cart" id="cartToggle" onclick="openCartModal(); return false;">
                            <i class="bi bi-bag"></i>
                            <span class="cart-count" id="cartCount">0</span>
                        </a>
                    </div>
                </div>

                <!-- Mobile Navigation (Tablet & Mobile) -->
                <div class="mobile-nav-wrapper d-lg-none">
                    <!-- Logo on the left -->
                    <div class="mobile-brand">
                        <a class="navbar-brand" href="#">
                            <img src="~/images/shessentials-logo/shessentials-logo.png" alt="Shessentials Logo" class="brand-logo" />
                        </a>
                    </div>
                    
                    <!-- Cart and Menu Toggle on the right -->
                    <div class="mobile-actions">
                        <!-- Cart Icon Only -->
                        <div class="cart-icon-container">
                            <a href="#" class="cart-icon-link" title="Shopping Cart" id="cartToggleMobile" onclick="openCartModal(); return false;">
                            <i class="bi bi-bag"></i>
                            <span class="cart-count" id="cartCount">0</span>
                        </a>
                        </div>
                        
                        <!-- Menu Toggle Only -->
                        <button class="navbar-toggler">
                            <span></span>
                            <span></span>
                            <span></span>
                        </button>
                    </div>

                    <!-- Mobile Collapsible Menu -->
                    <div class="navbar-collapse">
                        <div class="mobile-nav-content">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                                </li>
                            </ul>
                            <!-- Get Started button only appears in the dropdown menu -->
                            <a href="#" class="btn btn-get-started" data-bs-toggle="modal" data-bs-target="#authModal">Get Started</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Main Content -->
    <main role="main" class="main-content">
        @RenderBody()
    </main>    

    <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authModalLabel">Welcome Back</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="loginForm">
                        <h3 class="text-center mb-4">Login</h3>
                        <form>
                            <div class="mb-3">
                                <label for="loginEmail" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="loginEmail" required>
                            </div>
                            <div class="mb-3">
                                <label for="loginPassword" class="form-label">Password</label>
                                <input type="password" class="form-control" id="loginPassword" required>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                            <p class="text-center mt-3 small">
                                Don't have an account? <a href="#" id="showRegister">Register here</a>
                            </p>
                        </form>
                    </div>
                    <div id="registerForm" style="display: none;">
                        <h3 class="text-center mb-4">Register</h3>
                        <form>
                            <div class="mb-3">
                                <label for="registerName" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="registerName" required>
                            </div>
                            <div class="mb-3">
                                <label for="registerEmail" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="registerEmail" required>
                            </div>
                            <div class="mb-3">
                                <label for="registerPassword" class="form-label">Password</label>
                                <input type="password" class="form-control" id="registerPassword" required>
                            </div>
                            <div class="mb-3">
                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                <input type="password" class="form-control" id="confirmPassword" required>
                            </div>
                            <button type="submit" class="btn btn-success w-100">Create Account</button>
                            <p class="text-center mt-3 small">
                                Already have an account? <a href="#" id="showLogin">Login here</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer -->
    <footer class="footer-modern">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <div class="footer-brand">
                        <img src="~/images/shessentials-logo/shessentials-logo.png" alt="Shessentials Logo" class="footer-logo" />
                        <p class="footer-tagline">Elevating your everyday essentials</p>
                    </div>
                </div>
                
                <div class="footer-section">
                    <h5 class="footer-heading">Quick Links</h5>
                    <ul class="footer-links">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-area="" asp-controller="Shop" asp-action="Index">Shop</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                    </ul>
                </div>
                
                <div class="footer-section">
                    <h5 class="footer-heading">Connect with us</h5>
                    <div class="social-links">
                        <a href="#" class="social-link" title="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="social-link" title="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="social-link" title="Tiktok">
                            <i class="bi bi-tiktok"></i>
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="footer-bottom">
                <p>&copy; 2025 Shessentials. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/homepage/header-scroll.js" asp-append-version="true"></script>
    <script src="~/js/homepage/login-register.js" asp-append-version="true"></script>
    <script src="~/js/responsive-function/responsive-navbar.js" asp-append-version="true"></script>
    @await Html.PartialAsync("~/Views/Shop/CartModal.cshtml")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
