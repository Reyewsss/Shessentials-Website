<!-- Quick View Modal Structure (add this before closing body tag) -->
<div class="quick-view-overlay" id="quickViewOverlay" onclick="closeQuickView()">
    <div class="quick-view-modal" onclick="event.stopPropagation()">
        <button class="quick-view-close" onclick="closeQuickView()">×</button>
        <div class="quick-view-content">
            <div class="quick-view-image">
                <img id="quickViewImage" src="" alt="Product Image">
            </div>
            <div class="quick-view-details">
                <div class="quick-view-header">
                    <div class="quick-view-badge" id="quickViewBadge"></div>
                    <h2 class="quick-view-title" id="quickViewTitle">Product Title</h2>
                    <div class="quick-view-category" id="quickViewCategory">Category</div>
                    <p class="quick-view-description" id="quickViewDescription">Product description goes here.</p>
                    <div class="quick-view-rating">
                        <div class="quick-view-stars" id="quickViewStars"></div>
                        <span class="quick-view-rating-count" id="quickViewRatingCount">(0 reviews)</span>
                    </div>
                </div>
                
                <div class="quick-view-price">
                    <span class="quick-view-current-price" id="quickViewPrice">₱0.00</span>
                </div>
                
                <div class="quick-view-quantity">
                    <label>Quantity:</label>
                    <div class="quick-view-quantity-controls">
                        <button class="quick-view-quantity-btn" onclick="decreaseQuantity()">-</button>
                        <span class="quick-view-quantity-display" id="quickViewQuantity">1</span>
                        <button class="quick-view-quantity-btn" onclick="increaseQuantity()">+</button>
                    </div>
                </div>
                
                <div class="quick-view-actions">
                    <button class="quick-view-add-cart" onclick="addToCartFromQuickView()">Add to Cart</button>
                    <button class="quick-view-buy-now" onclick="buyNowFromQuickView()">Buy Now</button>
                </div>
            </div>
        </div>
    </div>

