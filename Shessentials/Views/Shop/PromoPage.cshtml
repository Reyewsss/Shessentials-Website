@{
    ViewData["Title"] = "Promo Page";
}

<link rel="stylesheet" href="~/css/shop-page/promo-page.css" asp-append-version="true" />

<section class="promo-header">
    <div class="container text-center">
        <h1 class="promo-title">Exclusive Shop Promos</h1>
        <p class="promo-subtitle">Claim your coupons and save on your favorite essentials!</p>
    </div>
</section>

<section class="promo-list-section">
    <div class="container">
        <div class="promo-list promo-list-centered">
            <!-- Promo Item 1 -->
            <div class="promo-item promo-item-wide">
                <div class="promo-item-left">
                    <picture>
                        <img src="~/images/promotion-banner/body-scrub-promo.jpg" alt="Body Scrub" class="promo-product-img" onclick="openImageModal(this, 'Exfoliating Body Scrub', 'Gently exfoliate and reveal smoother, softer skin with our natural body scrub. Formulated with organic ingredients to remove dead skin cells and improve skin texture.', '45% Off Body Scrub', 'Apply code AKOSITULBA at checkout', 'Valid until December 31, 2024', 'Cannot be combined with other offers. One use per customer. Valid only on full-priced items.')" />
                    </picture>
                    <div class="promo-product-info">
                        <span class="promo-store">Exfoliating Body Scrub</span>
                        <h2 class="promo-product-title">Reveal your smoothest skin yet!</h2>
                        <div class="promo-product-prices">
                            <span class="promo-price">₱301.95</span>
                            <span class="promo-old-price">₱549.00</span>
                        </div>
                    </div>
                </div>
                <div class="promo-item-right">
                    <div class="promo-coupon promo-coupon-wide">
                        <div class="coupon-banner">
                            <div class="coupon-dashed-line"></div>
                            <span class="promo-coupon-value">45% Off!</span>
                            <span class="promo-coupon-code">Code: <strong>AKOSITULBA</strong></span>
                            <div class="coupon-dashed-line"></div>
                        </div>
                        <button class="promo-claim-btn" data-code="AKOSITULBA" data-product="Body Scrub">Claim</button>
                    </div>
                </div>
            </div>
            <!-- Promo Item 2 -->
            <div class="promo-item promo-item-wide">
                <div class="promo-item-left">
                    <picture>
                        <img src="~/images/promotion-banner/serum-toner-bundle-promo.jpg" alt="Glow All Day Bundle" class="promo-product-img" onclick="openImageModal(this, 'Glow All Day Bundle', 'Get our best-selling serum and toner together at an amazing price. Perfect combination for daily skincare routine.', '₱55.00 Off Bundle', 'Apply code CARLOSYULO at checkout', 'Valid until January 15, 2025', 'Minimum purchase of ₱1000 required. Valid only on bundle items. Limited stock available.')" />
                    </picture>
                    <div class="promo-product-info">
                        <span class="promo-store">Glow All Day Bundle</span>
                        <h2 class="promo-product-title">Shessentials' hero products together</h2>
                        <div class="promo-product-prices">
                            <span class="promo-price">₱494.55</span>
                            <span class="promo-old-price">₱1099.00</span>
                        </div>
                    </div>
                </div>
                <div class="promo-item-right">
                    <div class="promo-coupon promo-coupon-wide">
                        <div class="coupon-banner">
                            <div class="coupon-dashed-line"></div>
                            <span class="promo-coupon-value">₱55.00 Off!</span>
                            <span class="promo-coupon-code">Code: <strong>CARLOSYULO</strong></span>
                            <div class="coupon-dashed-line"></div>
                        </div>
                        <button class="promo-claim-btn" data-code="CARLOSYULO" data-product="Glow All Day Bundle">Claim</button>
                    </div>
                </div>
            </div>
            <!-- Promo Item 3 -->
            <div class="promo-item promo-item-wide">
                <div class="promo-item-left">
                    <picture>
                        <img src="~/images/promotion-banner/lipstick-promo-banner.jpg" alt="Matte Lipstick" class="promo-product-img" onclick="openImageModal(this, 'Matte Lipstick', 'Long-lasting matte lipstick with nourishing formula. Available in 12 stunning shades that complement all skin tones.', '20% Off Lipstick', 'Apply code EMILOU20 at checkout', 'Valid until February 28, 2025', 'Valid on all lipstick variants. Free shipping on orders above ₱500. First-time customers only.')" />
                    </picture>
                    <div class="promo-product-info">
                        <span class="promo-store">Matte Lipstick</span>
                        <h2 class="promo-product-title">Keep your lips nourished and colorful with the Shessentials Lip Love Special.</h2>
                        <div class="promo-product-prices">
                            <span class="promo-price">₱279.20</span>
                            <span class="promo-old-price">₱349.00</span>
                        </div>
                    </div>
                </div>
                <div class="promo-item-right">
                    <div class="promo-coupon promo-coupon-wide">
                        <div class="coupon-banner">
                            <div class="coupon-dashed-line"></div>
                            <span class="promo-coupon-value">20% Off!</span>
                            <span class="promo-coupon-code">Code: <strong>EMILOU20</strong></span>
                            <div class="coupon-dashed-line"></div>
                        </div>
                        <button class="promo-claim-btn" data-code="EMILOU20" data-product="Matte Lipstick">Claim</button>
                    </div>
                </div>
            </div>
            <!-- Promo Item 4 -->
            <div class="promo-item promo-item-wide">
                <div class="promo-item-left">
                    <picture>
                        <img src="~/images/promotion-banner/toner-promo-banner.jpg" alt="Brightening Facial Toner" class="promo-product-img" onclick="openImageModal(this, 'Brightening Facial Toner', 'Achieve radiant skin with our brightening toner that gently exfoliates and hydrates. Perfect for all skin types.', '30% Off Toner', 'Apply code YES30 at checkout', 'Valid until March 31, 2025', 'Valid on toner purchases only. Not applicable with other discounts. While supplies last.')" />
                    </picture>
                    <div class="promo-product-info">
                        <span class="promo-store">Brightening Facial Toner</span>
                        <h2 class="promo-product-title">Reveal your skin's natural glow with our Brightening Facial Toner.</h2>
                        <div class="promo-product-prices">
                            <span class="promo-price">₱349.30</span>
                            <span class="promo-old-price">₱499.00</span>
                        </div>
                    </div>
                </div>
                <div class="promo-item-right">
                    <div class="promo-coupon promo-coupon-wide">
                        <div class="coupon-banner">
                            <div class="coupon-dashed-line"></div>
                            <span class="promo-coupon-value">30% Off!</span>
                            <span class="promo-coupon-code">Code: <strong>YES30</strong></span>
                            <div class="coupon-dashed-line"></div>
                        </div>
                        <button class="promo-claim-btn" data-code="YES30" data-product="Brightening Facial Toner">Claim</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How to Use Promos -->
<section class="promo-instructions">
    <div class="container">
        <div class="instructions-content">
            <h2 class="section-title">How to Use Your Promo Codes</h2>
            <div class="steps-grid">
                <div class="step-card">
                    <div class="step-number">1</div>
                    <h3>Claim Code</h3>
                    <p>Click the claim button next to any promo code to copy it to your clipboard.</p>
                </div>
                <div class="step-card">
                    <div class="step-number">2</div>
                    <h3>Shop Products</h3>
                    <p>Browse our collection and add your favorite items to your shopping cart.</p>
                </div>
                <div class="step-card">
                    <div class="step-number">3</div>
                    <h3>Apply at Checkout</h3>
                    <p>Paste the promo code in the discount field during checkout to save money.</p>
                </div>
                <div class="step-card">
                    <div class="step-number">4</div>
                    <h3>Enjoy Savings</h3>
                    <p>Watch your total decrease and enjoy your beauty essentials for less!</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Vertical Image Modal with Hidden Scroll -->
<div class="image-modal-overlay" id="imageModalOverlay" onclick="closeImageModal()">
    <div class="image-modal-vertical" onclick="event.stopPropagation()">
        <button class="modal-close" onclick="closeImageModal()">×</button>
        <div class="modal-content-vertical">
            <div class="modal-image-section-vertical">
                <img id="modalImage" src="" alt="Product Image" />
            </div>
            <div class="modal-details-section-vertical">
                <div class="modal-details-content-vertical">
                    <h3 class="modal-product-title" id="modalProductTitle">Product Title</h3>
                    <p class="modal-product-description" id="modalProductDescription">Product description goes here</p>
                    
                    <div class="promo-details">
                        <h4>Promo Details</h4>
                        <p id="modalPromoDetails">Promo details will appear here</p>
                        
                        <h4>How to Apply</h4>
                        <p id="modalHowToApply">Application instructions will appear here</p>
                        
                        <h4>Validity Period</h4>
                        <p id="modalValidity">Validity period will appear here</p>
                        
                        <h4>Terms & Conditions</h4>
                        <p id="modalTerms">Terms and conditions will appear here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Updated Toast Notification -->
<div id="promoToast" class="cart-notification">
    <div class="notification-content">
        <i class="bi bi-check-circle-fill notification-icon"></i>
        <div class="notification-text">
            <span class="notification-title">Promo Code Claimed!</span>
            <span class="notification-product" id="promoToastMessage">Code copied to clipboard</span>
        </div>
    </div>
</div>

<script src="~/js/promotional-section/promo-page.js" asp-append-version="true"></script>